{
	"name": "guinane.xyz",
	"version": "2.0.0",
	"private": true,
	"scripts": {
		"dev": "npm run local:images && astro dev",
		"build": "astro build && npm run convert:images && touch dist/.nojekyll",
		"lint": "eslint . && textlint **/*.md",
		"lint:text": "textlint **/*.md",
		"lint:fix": "eslint . --fix && textlint **/*.md --fix",
		"convert:images": "npm run convert:avif && npm run convert:webp",
		"convert:avif": "avif --input=dist/assets/*.png --output=dist/assets --speed=0 --quality=50",
		"convert:webp": "imagemin dist/assets/*.png --out-dir=dist/assets --plugin.webp.method=6 --plugin.webp.quality=50",
		"local:images": "npm run local:avif && npm run local:webp",
		"local:avif": "avif --input=public/assets/*.png --output=public/assets --speed=6 --quality=50 --overwrite",
		"local:webp": "imagemin public/assets/*.png --out-dir=public/assets --plugin.webp.method=1 --plugin.webp.quality=50"
	},
	"dependencies": {
		"astro": "0.21.10",
		"avif": "^0.0.4",
		"imagemin-cli": "^7.0.0",
		"imagemin-webp": "^7.0.0"
	},
	"devDependencies": {
		"eslint-config-goodbyte-styleguide": "^0.0.7",
		"textlint-rule-preset-goodbyte-styleguide": "^0.0.5"
	}
}
