{
	"name": "guinane.xyz",
	"version": "2.0.0",
	"private": true,
	"scripts": {
		"dev": "astro dev",
		"build": "npm run convert:images && astro build",
		"lint": "eslint . && textlint .",
		"lint:text": "textlint .",
		"lint:fix": "eslint . --fix && textlint . --fix",
		"convert:images": "npm run convert:avif && npm run convert:webp",
		"convert:avif": "avif --input=public/assets/*.png --output=public/assets --speed=0 --quality=30",
		"convert:webp": "imagemin public/assets/*.png --out-dir=public/assets --plugin.webp.method=6 --plugin.webp.quality=40"
	},
	"dependencies": {
		"astro": "^0.20.11",
		"avif": "^0.0.4",
		"imagemin-cli": "^7.0.0",
		"imagemin-webp": "^6.0.0"
	},
	"devDependencies": {
		"eslint-config-goodbyte-styleguide": "^0.0.7",
		"textlint-rule-preset-goodbyte-styleguide": "^0.0.5"
	}
}
